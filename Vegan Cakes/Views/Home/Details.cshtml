@using Vegan_Cakes.Models

@model Cake

@{
    Layout = "_Layout";
}

<h2 class="well">Details of @Model.Name</h2>

<div class="thumbnail">
    <img src="@Model.ImageUrl">
    <div class="caption">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
           @Model.Name
        </h3>
        <p>@Model.LongDescription</p>
    </div>
</div>
